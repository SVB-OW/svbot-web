{
	"name": "svbot-web",
	"version": "1.2.0",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"dev": "npx concurrently \"npm run dev:client\" \"npm run dev:server\"",
		"dev:client": "nuxt dev",
		"dev:server": "npx nodemon api.js",
		"build": "nuxt build",
		"start": "npx concurrently \"nuxt start\" \"node api.js\"",
		"generate": "nuxt generate",
		"lint-fix": "eslint . --fix",
		"format": "prettier --check \"./**/*.{vue,ts,js}\" --ignore-path .gitignore",
		"format-fix": "prettier --write \"./**/*.{vue,ts,js}\" --ignore-path .gitignore",
		"lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
		"lint:prettier": "prettier --check .",
		"lint": "yarn lint:js && yarn lint:prettier",
		"lintfix": "prettier --write --list-different . && yarn lint:js --fix"
	},
	"dependencies": {
		"@pinia/nuxt": "^0.5.1",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.17.1",
		"express-ws": "^5.0.2",
		"mongodb": "^6.5.0",
		"nuxt": "^3.11.1",
		"pinia": "^2.1.7",
		"socket.io": "^4.6.1",
		"socket.io-client": "^4.3.2",
		"vue": "^3.4.21",
		"vue-router": "^4.3.0"
	},
	"devDependencies": {
		"@types/mongodb": "^4.0.7",
		"prettier": "^3.2.5"
	}
}
